<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.Hackedtv" name="Hackermil`s REPO" version="1.0" provider-name="Hackermil">
	<extension point="xbmc.addon.repository" name="Hackermil`s Hackedtv Addon Repository">
        <info compressed="false">http://github.com/Hackedtv/Hackedtv-Repo/raw/master/addons.xml</info>
		<checksum>http://github.com/Hackedtv/Hackedtv-Repo/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/Hackedtv/Hackedtv-Repo/raw/master/zips</datadir>
    </extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install MY Addons</summary>
		<description>If You Like What I Do Follow Me On Twitter [COLOR aqua]@HackerMil[/COLOR]</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="service.hackermil.update"
       name="HackedTV Updater"
      version="1.3"
      provider-name="Hackermil">
	<requires>
        <import addon="xbmc.addon" version="12.0.0"/>
        <import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.addon.common" version="2.0.0"/>
    </requires>
	<extension point="xbmc.service" library="service.py" start="[login|startup]"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Always making sure that HackedTV is up to date.</summary>
    </extension>
</addon>
</addons>
